SERVICE_NAME=knowledge-graph-builder
SERVICE_VERSION=1.0.0
SERVICE_URL=http://localhost:8003

# Database Configuration
NEO4J_URI=bolt://neo4j:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=password
NEO4J_DATABASE=neo4j

POSTGRES_URL=postgresql+asyncpg://postgres:password@postgres:5432/kgbuilder

# External Services
AUTH_SERVICE_URL=http://auth-service:8000
CREDENTIAL_BROKER_URL=http://credential-broker:8000
CORE_SERVICE_URL=http://oraclous-core:8000
REDIS_URL="redis://redis:6379/0"
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Security
INTERNAL_SERVICE_KEY=your-internal-service-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here

# LLM Configuration (Optional - will use credential broker)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
DIFFBOT_API_KEY=

# Performance Settings
MAX_CONCURRENT_EXTRACTIONS=5
BATCH_SIZE=100
CACHE_TTL=300

# Monitoring
ENABLE_METRICS=true
LOG_LEVEL=INFO
